@{
    ViewData["Title"] = "Social Media";
}

<link rel="stylesheet"
      type="text/css"
      href="~/css/welcome.css"
      media="only screen and (min-width:901px)" />
<link rel="stylesheet"
      type="text/css"
      href="~/css/updates.css"
      media="only screen and (min-width:901px)" />
    <!--------------------------HEADER-------------------------------->
    <div class="team-center-items">
        <div class="team-head-container">
        <p class="team-head">Social Media Updates & Posts!</p>
        </div>

        <div class="card-row-head">Tweets by Education Officials</div>
